{
  "type": "scaffold",
  "appBar": {
    "type": "appBar",
    "backgroundColor": "#FFFFFF",
    "elevation": 0,
    "title": {
      "type": "row",
      "children": [
        {
          "type": "image",
          "src": "assets/images/logo.png",
          "imageType": "asset",
          "width": 24,
          "height": 24
        }
      ]
    },
    "actions": [
      {
        "type": "iconButton",
        "icon": {
          "type": "image",
          "src": "assets/icons/ic_map.svg",
          "imageType": "asset",
          "width": 22,
          "height": 22
        },
        "onPressed": {
          "actionType": "navigate",
          "path": "/branch-map"
        }
      },
      {
        "type": "iconButton",
        "icon": {
          "type": "image",
          "src": "assets/icons/ic_notification.svg",
          "imageType": "asset",
          "width": 22,
          "height": 22
        },
        "onPressed": {
          "actionType": "navigate",
          "path": "/notifications"
        }
      },
      {
        "type": "iconButton",
        "icon": {
          "type": "image",
          "src": "assets/icons/ic_support.svg",
          "imageType": "asset",
          "width": 22,
          "height": 22
        },
        "onPressed": {
          "actionType": "navigate",
          "path": "/support"
        }
      }
    ]
  },
  "body": {
    "type": "defaultTabController",
    "length": 4,
    "child": {
      "type": "column",
      "children": [
        {
          "type": "container",
          "padding": {
            "horizontal": 16,
            "vertical": 12
          },
          "child": {
            "type": "row",
            "mainAxisAlignment": "spaceBetween",
            "children": [
              {
                "type": "column",
                "crossAxisAlignment": "start",
                "children": [
                  {
                    "type": "text",
                    "data": "سلام {{user.firstName}}",
                    "style": "headlineSmall"
                  },
                  {
                    "type": "text",
                    "data": "شماره: {{user.mobile}}",
                    "style": "bodySmall",
                    "color": "textSecondary"
                  }
                ]
              },
              {
                "type": "container",
                "width": 48,
                "height": 48,
                "alignment": "center",
                "decoration": {
                  "color": "#F5F7FA",
                  "borderRadius": 24
                },
                "child": {
                  "type": "image",
                  "src": "{{user.avatarUrl}}",
                  "width": 40,
                  "height": 40
                }
              }
            ]
          }
        },
        {
          "type": "tabBar",
          "isScrollable": true,
          "tabs": [
            {
              "type": "tab",
              "child": {
                "type": "text",
                "data": "سپرده"
              }
            },
            {
              "type": "tab",
              "child": {
                "type": "text",
                "data": "کارت"
              }
            },
            {
              "type": "tab",
              "child": {
                "type": "text",
                "data": "مالی"
              }
            },
            {
              "type": "tab",
              "child": {
                "type": "text",
                "data": "خدمات"
              }
            }
          ]
        },
        {
          "type": "expanded",
          "child": {
            "type": "tabBarView",
            "children": [
              {
                "type": "singleChildScrollView",
                "child": {
                  "type": "column",
                  "children": [
                    {
                      "type": "card",
                      "margin": {
                        "horizontal": 16,
                        "vertical": 8
                      },
                      "padding": 16,
                      "color": "#E31837",
                      "shape": {
                        "borderRadius": 16
                      },
                      "child": {
                        "type": "column",
                        "crossAxisAlignment": "start",
                        "children": [
                          {
                            "type": "row",
                            "mainAxisAlignment": "spaceBetween",
                            "children": [
                              {
                                "type": "text",
                                "data": "موجودی کل",
                                "style": "bodyMedium",
                                "color": "#FFFFFF99"
                              },
                              {
                                "type": "row",
                                "children": [
                                  {
                                    "type": "iconButton",
                                    "icon": {
                                      "type": "icon",
                                      "icon": "visibility",
                                      "size": 20
                                    },
                                    "onPressed": {
                                      "actionType": "setValue",
                                      "key": "showBalance",
                                      "value": false
                                    }
                                  },
                                  {
                                    "type": "iconButton",
                                    "icon": {
                                      "type": "icon",
                                      "icon": "visibility_off",
                                      "size": 20
                                    },
                                    "onPressed": {
                                      "actionType": "setValue",
                                      "key": "showBalance",
                                      "value": true
                                    }
                                  }
                                ]
                              }
                            ]
                          },
                          {
                            "type": "sizedBox",
                            "height": 6
                          },
                          {
                            "type": "conditional",
                            "condition": "{{showBalance}}",
                            "ifTrue": {
                              "type": "text",
                              "data": "{{user.totalBalance}} ریال",
                              "style": "headlineMedium",
                              "color": "#FFFFFF"
                            },
                            "ifFalse": {
                              "type": "text",
                              "data": "********",
                              "style": "headlineMedium",
                              "color": "#FFFFFF"
                            }
                          }
                        ]
                      }
                    },
                    {
                      "type": "container",
                      "padding": {
                        "horizontal": 16,
                        "vertical": 12
                      },
                      "child": {
                        "type": "text",
                        "data": "سپرده‌ها",
                        "style": "titleMedium"
                      }
                    }
                  ]
                }
              },
              {
                "type": "singleChildScrollView",
                "child": {
                  "type": "column",
                  "children": [
                    {
                      "type": "container",
                      "padding": {
                        "horizontal": 16,
                        "vertical": 12
                      },
                      "child": {
                        "type": "text",
                        "data": "کارت‌های من",
                        "style": "titleMedium"
                      }
                    }
                  ]
                }
              },
              {
                "type": "singleChildScrollView",
                "child": {
                  "type": "column",
                  "children": [
                    {
                      "type": "container",
                      "padding": {
                        "horizontal": 16,
                        "vertical": 12
                      },
                      "child": {
                        "type": "text",
                        "data": "مالی",
                        "style": "titleMedium"
                      }
                    }
                  ]
                }
              },
              {
                "type": "singleChildScrollView",
                "child": {
                  "type": "column",
                  "children": [
                    {
                      "type": "container",
                      "padding": {
                        "horizontal": 16,
                        "vertical": 12
                      },
                      "child": {
                        "type": "text",
                        "data": "خدمات",
                        "style": "titleMedium"
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  },
  "floatingActionButton": {
    "type": "floatingActionButton",
    "child": {
      "type": "icon",
      "icon": "qr_code_scanner"
    },
    "backgroundColor": "#E31837",
    "onPressed": {
      "actionType": "navigate",
      "path": "/scanner"
    }
  },
  "data": {
    "user": {
      "firstName": "علی",
      "mobile": "0912XXXXXXX",
      "totalBalance": "125,450,000",
      "avatarUrl": null
    },
    "showBalance": true
  }
}
