{
  "type": "scaffold",
  "appBar": {
    "type": "appBar",
    "title": {
      "type": "text",
      "data": "اعلان‌ها"
    },
    "actions": [
      {
        "type": "iconButton",
        "onPressed": {
          "actionType": "networkRequest",
          "url": "https://api.tobank.com/notifications/mark-all-read",
          "method": "POST"
        },
        "icon": {
          "type": "image",
          "src": "assets/icons/ic_check_all.svg",
          "width": 24,
          "height": 24,
          "imageType": "asset"
        }
      },
      {
        "type": "iconButton",
        "onPressed": {
          "actionType": "navigate",
          "path": "/settings/notifications"
        },
        "icon": {
          "type": "image",
          "src": "assets/icons/ic_settings.svg",
          "imageType": "asset",
          "width": 24,
          "height": 24,
          "imageType": "asset"
        }
      }
    ]
  },
  "body": {
    "type": "column",
    "children": [
      {
        "type": "container",
        "padding": {
          "horizontal": 16,
          "vertical": 8
        },
        "child": {
          "type": "row",
          "children": [
            {
              "type": "expanded",
              "child": {
                "type": "chip",
                "backgroundColor": "{{filter == 'all' ? '#E0F7FA' : '#F5F5F5'}}",
                "onDeleted": {
                  "actionType": "setValue",
                  "key": "filter",
                  "value": "all"
                },
                "label": {
                  "type": "text",
                  "data": "همه"
                }
              }
            },
            {
              "type": "sizedBox",
              "width": 8
            },
            {
              "type": "expanded",
              "child": {
                "type": "chip",
                "backgroundColor": "{{filter == 'unread' ? '#E0F7FA' : '#F5F5F5'}}",
                "onDeleted": {
                  "actionType": "setValue",
                  "key": "filter",
                  "value": "unread"
                },
                "label": {
                  "type": "text",
                  "data": "خوانده نشده"
                }
              }
            },
            {
              "type": "sizedBox",
              "width": 8
            },
            {
              "type": "expanded",
              "child": {
                "type": "chip",
                "backgroundColor": "{{filter == 'important' ? '#E0F7FA' : '#F5F5F5'}}",
                "onDeleted": {
                  "actionType": "setValue",
                  "key": "filter",
                  "value": "important"
                },
                "label": {
                  "type": "text",
                  "data": "مهم"
                }
              }
            }
          ]
        }
      },
      {
        "type": "expanded",
        "child": {
          "type": "listView",
          "children": [
            {
              "type": "container",
              "padding": {
                "horizontal": 16,
                "vertical": 8
              },
              "child": {
                "type": "text",
                "data": "امروز",
                "style": {
                  "fontSize": 14,
                  "color": "#757575"
                }
              }
            },
            {
              "type": "listTile",
              "leading": {
                "type": "container",
                "width": 48,
                "height": 48,
                "decoration": {
                  "color": "#E8F5E9",
                  "borderRadius": 24
                },
                "alignment": "center",
                "child": {
                  "type": "icon",
                  "icon": "savings",
                  "color": "#4CAF50"
                }
              },
              "title": {
                "type": "text",
                "data": "واریز موفق"
              },
              "subtitle": {
                "type": "column",
                "crossAxisAlignment": "start",
                "children": [
                  {
                    "type": "text",
                    "data": "مبلغ ۱۵,۰۰۰,۰۰۰ ریال به حساب شما واریز شد"
                  },
                  {
                    "type": "text",
                    "data": "۵ دقیقه پیش",
                    "style": {
                      "fontSize": 12,
                      "color": "#757575"
                    }
                  }
                ]
              },
              "trailing": {
                "type": "container",
                "width": 8,
                "height": 8,
                "decoration": {
                  "color": "#2196F3",
                  "borderRadius": 4
                }
              },
              "onPressed": {
                "actionType": "navigate",
                "path": "/transactions/detail"
              }
            },
            {
              "type": "listTile",
              "leading": {
                "type": "container",
                "width": 48,
                "height": 48,
                "decoration": {
                  "color": "#FFF3E0",
                  "borderRadius": 24
                },
                "alignment": "center",
                "child": {
                  "type": "icon",
                  "icon": "event",
                  "color": "#FF9800"
                }
              },
              "title": {
                "type": "text",
                "data": "یادآوری قسط"
              },
              "subtitle": {
                "type": "column",
                "crossAxisAlignment": "start",
                "children": [
                  {
                    "type": "text",
                    "data": "قسط وام شما فردا سررسید می‌شود"
                  },
                  {
                    "type": "text",
                    "data": "۲ ساعت پیش",
                    "style": {
                      "fontSize": 12,
                      "color": "#757575"
                    }
                  }
                ]
              },
              "trailing": {
                "type": "container",
                "width": 8,
                "height": 8,
                "decoration": {
                  "color": "#2196F3",
                  "borderRadius": 4
                }
              },
              "onPressed": {
                "actionType": "navigate",
                "path": "/loans/detail"
              }
            },
            {
              "type": "container",
              "padding": {
                "horizontal": 16,
                "vertical": 8
              },
              "child": {
                "type": "text",
                "data": "دیروز",
                "style": {
                  "fontSize": 14,
                  "color": "#757575"
                }
              }
            },
            {
              "type": "listTile",
              "leading": {
                "type": "container",
                "width": 48,
                "height": 48,
                "decoration": {
                  "color": "#E3F2FD",
                  "borderRadius": 24
                },
                "alignment": "center",
                "child": {
                  "type": "icon",
                  "icon": "security",
                  "color": "#2196F3"
                }
              },
              "title": {
                "type": "text",
                "data": "ورود جدید"
              },
              "subtitle": {
                "type": "column",
                "crossAxisAlignment": "start",
                "children": [
                  {
                    "type": "text",
                    "data": "ورود جدید از دستگاه iPhone 14"
                  },
                  {
                    "type": "text",
                    "data": "دیروز ۱۵:۳۰",
                    "style": {
                      "fontSize": 12,
                      "color": "#757575"
                    }
                  }
                ]
              },
              "onPressed": {
                "actionType": "navigate",
                "path": "/settings/devices"
              }
            }
          ]
        }
      }
    ]
  }
}