{
  "$schema": "tobank-sdui/v1/page",
  "version": "1.0.0",
  "pageId": "profile",
  "title": {"fa": "پروفایل", "en": "Profile"},
  
  "appBar": {
    "type": "standard",
    "title": {"fa": "پروفایل من", "en": "My Profile"},
    "actions": [
      {"icon": "assets/icons/ic_edit.svg", "onTap": {"type": "navigate", "route": "/profile/edit"}}
    ]
  },
  
  "body": {
    "type": "scrollable",
    "children": [
      {"type": "container", "padding": 24, "decoration": {"gradient": {"colors": ["#00BCD4", "#0097A7"]}}, "child": {"type": "column", "children": [
        {"type": "container", "width": 100, "height": 100, "decoration": {"color": "#FFFFFF", "borderRadius": 50}, "alignment": "center", "child": {"type": "conditional", "condition": "{{user.avatar}}", "whenTrue": {"type": "image", "src": "{{user.avatar}}", "width": 96, "height": 96, "borderRadius": 48}, "whenFalse": {"type": "text", "text": "{{user.initials}}", "style": "displaySmall", "color": "#00BCD4"}}},
        {"type": "text", "text": "{{user.fullName}}", "style": "headlineSmall", "color": "#FFFFFF", "margin": {"top": 16}},
        {"type": "text", "text": "{{user.mobile}}", "style": "bodyMedium", "color": "#FFFFFF", "margin": {"top": 4}},
        {"type": "chip", "label": "{{user.membershipLevel}}", "backgroundColor": "#FFFFFF20", "textColor": "#FFFFFF", "margin": {"top": 12}}
      ]}},
      
      {"type": "container", "padding": 16, "child": {"type": "column", "children": [
        {"type": "card", "child": {"type": "column", "children": [
          {"type": "list_tile", "leading": {"type": "icon", "icon": "assets/icons/ic_person.svg", "color": "primary"}, "title": {"fa": "اطلاعات شخصی", "en": "Personal Info"}, "trailing": {"type": "icon", "icon": "assets/icons/ic_arrow_left.svg"}, "onTap": {"type": "navigate", "route": "/profile/personal-info"}},
          {"type": "divider", "indent": 56},
          {"type": "list_tile", "leading": {"type": "icon", "icon": "assets/icons/ic_card.svg", "color": "primary"}, "title": {"fa": "کارت ملی", "en": "National ID"}, "trailing": {"type": "row", "children": [{"type": "chip", "label": {"fa": "تایید شده", "en": "Verified"}, "backgroundColor": "#E8F5E9", "textColor": "#4CAF50", "size": "small"}, {"type": "icon", "icon": "assets/icons/ic_arrow_left.svg"}]}, "onTap": {"type": "navigate", "route": "/profile/national-id"}},
          {"type": "divider", "indent": 56},
          {"type": "list_tile", "leading": {"type": "icon", "icon": "assets/icons/ic_address.svg", "color": "primary"}, "title": {"fa": "آدرس‌ها", "en": "Addresses"}, "trailing": {"type": "icon", "icon": "assets/icons/ic_arrow_left.svg"}, "onTap": {"type": "navigate", "route": "/profile/addresses"}}
        ]}},
        
        {"type": "card", "margin": {"top": 16}, "child": {"type": "column", "children": [
          {"type": "list_tile", "leading": {"type": "icon", "icon": "assets/icons/ic_shield.svg", "color": "primary"}, "title": {"fa": "امنیت", "en": "Security"}, "trailing": {"type": "icon", "icon": "assets/icons/ic_arrow_left.svg"}, "onTap": {"type": "navigate", "route": "/settings/security"}},
          {"type": "divider", "indent": 56},
          {"type": "list_tile", "leading": {"type": "icon", "icon": "assets/icons/ic_fingerprint.svg", "color": "primary"}, "title": {"fa": "ورود بیومتریک", "en": "Biometric Login"}, "trailing": {"type": "switch", "value": "{{user.biometricEnabled}}", "onChanged": {"type": "toggle_biometric"}}},
          {"type": "divider", "indent": 56},
          {"type": "list_tile", "leading": {"type": "icon", "icon": "assets/icons/ic_devices.svg", "color": "primary"}, "title": {"fa": "دستگاه‌های فعال", "en": "Active Devices"}, "trailing": {"type": "row", "children": [{"type": "chip", "label": "{{user.activeDevices}}", "size": "small"}, {"type": "icon", "icon": "assets/icons/ic_arrow_left.svg"}]}, "onTap": {"type": "navigate", "route": "/settings/devices"}}
        ]}},
        
        {"type": "card", "margin": {"top": 16}, "child": {"type": "column", "children": [
          {"type": "list_tile", "leading": {"type": "icon", "icon": "assets/icons/ic_invite.svg", "color": "#4CAF50"}, "title": {"fa": "دعوت از دوستان", "en": "Invite Friends"}, "subtitle": {"fa": "کسب ۵۰,۰۰۰ تومان اعتبار", "en": "Earn 50K Toman credit"}, "trailing": {"type": "icon", "icon": "assets/icons/ic_arrow_left.svg"}, "onTap": {"type": "navigate", "route": "/referral"}}
        ]}},
        
        {"type": "text_button", "label": {"fa": "خروج از حساب", "en": "Log Out"}, "color": "#F44336", "margin": {"top": 24}, "onTap": {"type": "confirm_dialog", "title": {"fa": "خروج", "en": "Log Out"}, "message": {"fa": "آیا می‌خواهید از حساب خود خارج شوید؟", "en": "Are you sure you want to log out?"}, "onConfirm": {"type": "logout"}}},
        
        {"type": "sized_box", "height": 32}
      ]}}
    ]
  },
  
  "dataBindings": {"user": {"source": "api", "endpoint": "dibalite/customer/profile"}},
  "mockData": {
    "user": {
      "fullName": "علی احمدی",
      "initials": "ع‌ا",
      "mobile": "۰۹۱۲۳۴۵۶۷۸۹",
      "email": "ali.ahmadi@email.com",
      "avatar": null,
      "membershipLevel": "مشتری طلایی",
      "biometricEnabled": true,
      "activeDevices": 2
    }
  }
}

