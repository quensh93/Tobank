{
  "$schema": "tobank-sdui/v1/bpms-step",
  "version": "1.0.0",
  "stepId": "military_personal",
  "flowId": "military_guarantee",
  "stepNumber": 2,
  "title": {"fa": "اطلاعات شخصی", "en": "Personal Info"},
  
  "appBar": {"type": "bpms_stepper", "title": {"fa": "ضمانت‌نامه نظام وظیفه", "en": "Military Guarantee"}, "currentStep": 2, "totalSteps": 7},
  
  "body": {
    "type": "scrollable",
    "padding": 16,
    "children": [
      {
        "type": "section",
        "header": {"title": {"fa": "اطلاعات هویتی", "en": "Identity Info"}},
        "child": {
          "type": "column",
          "children": [
            {"type": "text_field", "label": {"fa": "نام", "en": "First Name"}, "value": "{{customer.firstName}}", "readOnly": true},
            {"type": "text_field", "label": {"fa": "نام خانوادگی", "en": "Last Name"}, "margin": {"top": 16}, "value": "{{customer.lastName}}", "readOnly": true},
            {"type": "text_field", "label": {"fa": "کد ملی", "en": "National ID"}, "margin": {"top": 16}, "value": "{{customer.nationalId}}", "readOnly": true},
            {"type": "text_field", "label": {"fa": "نام پدر", "en": "Father's Name"}, "margin": {"top": 16}, "bindTo": "fatherName", "validation": {"required": true}},
            {"type": "text_field", "label": {"fa": "شماره شناسنامه", "en": "Birth Cert No"}, "margin": {"top": 16}, "bindTo": "birthCertNo", "validation": {"required": true}},
            {"type": "date_picker_field", "label": {"fa": "تاریخ تولد", "en": "Birth Date"}, "margin": {"top": 16}, "calendar": "jalali", "value": "{{customer.birthDate}}", "readOnly": true}
          ]
        }
      },
      
      {
        "type": "section",
        "margin": {"top": 24},
        "header": {"title": {"fa": "اطلاعات تماس", "en": "Contact Info"}},
        "child": {
          "type": "column",
          "children": [
            {"type": "text_field", "label": {"fa": "شماره موبایل", "en": "Mobile"}, "value": "{{customer.mobile}}", "readOnly": true},
            {"type": "text_field", "label": {"fa": "تلفن ثابت", "en": "Landline"}, "margin": {"top": 16}, "bindTo": "phone"},
            {"type": "text_field", "label": {"fa": "آدرس", "en": "Address"}, "margin": {"top": 16}, "maxLines": 2, "bindTo": "address"}
          ]
        }
      },
      
      {"type": "sized_box", "height": 100}
    ]
  },
  
  "bottomBar": {
    "type": "container",
    "padding": 16,
    "child": {
      "type": "row",
      "children": [
        {"type": "expanded", "child": {"type": "outlined_button", "label": {"fa": "قبلی", "en": "Back"}, "onTap": {"type": "navigate_back"}}},
        {"type": "sized_box", "width": 16},
        {"type": "expanded", "flex": 2, "child": {"type": "elevated_button", "label": {"fa": "بعدی", "en": "Next"}, "onTap": {"type": "navigate", "route": "/bpms/military-guarantee/step-03"}}}
      ]
    }
  },
  
  "dataBindings": {
    "customer": {"source": "api", "endpoint": "dibalite/customer/profile"}
  },
  
  "mockData": {
    "customer": {"firstName": "علی", "lastName": "احمدی", "nationalId": "۰۰۱۲۳۴۵۶۷۸", "birthDate": "۱۳۸۰/۰۵/۱۵", "mobile": "۰۹۱۲۳۴۵۶۷۸۹"}
  }
}

