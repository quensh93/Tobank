{
  "$schema": "tobank-sdui/v1/animation-library",
  "version": "1.0.0",
  "description": "Animation configurations for SDUI",
  
  "lottieAnimations": {
    "success": {
      "asset": "assets/animations/success.json",
      "width": 150,
      "height": 150,
      "repeat": false
    },
    "error": {
      "asset": "assets/animations/error.json",
      "width": 150,
      "height": 150,
      "repeat": false
    },
    "loading": {
      "asset": "assets/animations/loading.json",
      "width": 100,
      "height": 100,
      "repeat": true
    },
    "processing": {
      "asset": "assets/animations/processing.json",
      "width": 150,
      "height": 150,
      "repeat": true
    },
    "empty": {
      "asset": "assets/animations/empty.json",
      "width": 200,
      "height": 200,
      "repeat": true
    },
    "celebration": {
      "asset": "assets/animations/celebration.json",
      "width": 200,
      "height": 200,
      "repeat": false
    },
    "fingerprint": {
      "asset": "assets/animations/fingerprint.json",
      "width": 120,
      "height": 120,
      "repeat": true
    },
    "card_scan": {
      "asset": "assets/animations/card_scan.json",
      "width": 280,
      "height": 180,
      "repeat": true
    }
  },
  
  "transitions": {
    "fade": {
      "type": "fade",
      "duration": 300,
      "curve": "easeInOut"
    },
    "slide_up": {
      "type": "slide",
      "direction": "up",
      "duration": 300,
      "curve": "easeOut"
    },
    "slide_left": {
      "type": "slide",
      "direction": "left",
      "duration": 250,
      "curve": "easeInOut"
    },
    "scale": {
      "type": "scale",
      "duration": 200,
      "curve": "easeOut"
    },
    "bounce": {
      "type": "scale",
      "duration": 400,
      "curve": "bounceOut"
    }
  },
  
  "microInteractions": {
    "button_press": {
      "type": "scale",
      "scale": 0.95,
      "duration": 100
    },
    "card_tap": {
      "type": "highlight",
      "color": "rgba(0,0,0,0.05)",
      "duration": 200
    },
    "success_check": {
      "type": "sequence",
      "animations": [
        {"type": "scale", "from": 0, "to": 1, "duration": 200},
        {"type": "bounce", "duration": 300}
      ]
    },
    "error_shake": {
      "type": "shake",
      "intensity": 10,
      "duration": 400
    },
    "pulse": {
      "type": "scale",
      "from": 1,
      "to": 1.1,
      "duration": 600,
      "repeat": true,
      "reverse": true
    }
  },
  
  "pageTransitions": {
    "default": {
      "ios": "cupertino",
      "android": "material"
    },
    "modal": {
      "type": "slide_up",
      "duration": 300
    },
    "fade": {
      "type": "fade",
      "duration": 200
    }
  }
}

