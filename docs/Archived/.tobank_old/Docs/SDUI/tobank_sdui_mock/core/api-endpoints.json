      "cardToCard": {
        "path": "banks/card_to_card",
        "method": "POST",
        "requireToken": true
      },
      "cardToCardGardeshgary": {
        "path": "banks/gardeshgary/card_to_card",
        "method": "POST",
        "requireToken": true
      },
      "depositTransfer": {
        "path": "dibalite/transfer/internal",
        "method": "POST",
        "requireToken": true,
        "requireBase64": true,
        "requireEkycSign": true
