        "path": "dibalite/cards/change-pin",
        "method": "POST",
        "requireToken": true,
        "requireBase64": true,
        "requireEkycSign": true
      },
      "changePinArbitrary": {
        "path": "dibalite/cards/change-pin-arbitrary",
        "method": "POST",
        "requireToken": true,
        "requireBase64": true,
        "requireEkycSign": true
      },
      "issuance": {
        "path": "dibalite/cards/issuance",
        "method": "POST",
        "requireToken": true,
        "requireBase64": true,
        "requireEkycSign": true
