        "requireBase64": true
      },
      "updatePublicKey": {
        "path": "dibalite/customer/update-public-key",
        "method": "POST",
        "requireToken": true,
        "requireBase64": true,
        "requireEkycSign": true
      },
      "updateAddress": {
        "path": "dibalite/customer/update-address",
        "method": "POST",
        "requireToken": true,
        "requireBase64": true
      }
    },
    
