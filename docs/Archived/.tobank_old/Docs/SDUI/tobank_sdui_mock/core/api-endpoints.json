        "method": "POST",
        "requireToken": true
      },
      "getTaskData": {
        "path": "bpms/task-data/{taskId}",
        "method": "GET",
        "requireToken": true
      },
      "completeTask": {
        "path": "bpms/complete-task",
        "method": "POST",
        "requireToken": true
      },
      "uploadDocument": {
        "path": "bpms/upload-document",
        "method": "POST",
        "requireToken": true,
