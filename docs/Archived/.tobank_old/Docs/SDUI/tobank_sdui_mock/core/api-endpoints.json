        "requireToken": false
      },
      "amounts": {
        "path": "charge/amounts/{operator}",
        "method": "GET",
        "requireToken": false
      },
      "purchase": {
        "path": "charge/purchase",
        "method": "POST",
        "requireToken": true
      }
    },
    
    "internet": {
      "packages": {
        "path": "internet/packages/{operator}",
        "method": "GET",
        "requireToken": false
      },
      "purchase": {
        "path": "internet/purchase",
        "method": "POST",
        "requireToken": true
      }
    },
    
    "bpms": {
      "startFormData": {
        "path": "bpms/start-form-data",
