        "path": "safe-box/reserve-visit",
        "method": "POST",
        "requireToken": true
      }
    },
    
    "notifications": {
      "list": {
        "path": "notifications",
        "method": "GET",
        "requireToken": true
      },
      "markRead": {
        "path": "notifications/{notificationId}/read",
        "method": "POST",
        "requireToken": true
