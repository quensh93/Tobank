        "requireToken": true
      },
      "owner": {
        "path": "banks/cards",
        "method": "POST",
        "requireToken": true
      },
      "block": {
        "path": "dibalite/cards/block",
        "method": "POST",
        "requireToken": true,
        "requireBase64": true,
        "requireEkycSign": true
      },
