{
  "$schema": "tobank-sdui/v1/api-endpoints",
  "version": "1.0.0",
  
  "endpoints": {
    "auth": {
      "login": {
        "path": "dibalite/kyc",
        "method": "POST",
        "requireToken": false,
        "requireEncryption": true,
        "requireBase64": true
      },
      "register": {
        "path": "dibalite/customer/registration",
        "method": "POST",
        "requireToken": true,
        "requireEncryption": true,
        "requireBase64": true,
        "requireEkycSign": true
      },
      "refreshToken": {
        "path": "auth/refresh",
        "method": "POST",
        "requireToken": true
      },
      "logout": {
        "path": "auth/logout",
        "method": "POST",
        "requireToken": true
      }
    },
    
    "customer": {
