{
  "$schema": "tobank-sdui/v1/page",
  "version": "1.0.0",
  "pageId": "bill_result",
  "pageType": "result",
  "title": {
    "fa": "نتیجه پرداخت",
    "en": "Payment Result"
  },
  "requiresAuth": true,
  
  "appBar": {
    "type": "standard",
    "title": {"fa": "نتیجه پرداخت", "en": "Payment Result"},
    "showBackButton": false
  },
  
  "body": {
    "type": "scrollable",
    "padding": 16,
    "children": [
      {
        "id": "result_animation",
        "type": "container",
        "alignment": "center",
        "padding": 32,
        "child": {
          "type": "conditional",
          "condition": "{{success}}",
          "whenTrue": {
            "type": "lottie",
            "asset": "assets/animations/success.json",
            "width": 150,
            "height": 150,
            "repeat": false
          },
          "whenFalse": {
            "type": "lottie",
            "asset": "assets/animations/error.json",
            "width": 150,
            "height": 150,
            "repeat": false
          }
        }
      },
      
      {
        "id": "result_title",
        "type": "text",
        "text": "{{success ? {'fa': 'پرداخت موفق', 'en': 'Payment Successful'} : {'fa': 'پرداخت ناموفق', 'en': 'Payment Failed'}}}",
        "style": "headlineSmall",
        "color": "{{success ? '#4CAF50' : '#F44336'}}",
        "textAlign": "center"
      },
      
      {
        "id": "amount_display",
        "type": "conditional",
        "condition": "{{success}}",
        "whenTrue": {
          "type": "container",
          "margin": {"top": 16},
          "child": {
            "type": "column",
            "children": [
              {
                "type": "text",
                "text": "{{formatCurrency(amount)}}",
                "style": "displaySmall",
                "textAlign": "center"
              },
              {
                "type": "text",
                "text": {"fa": "ریال", "en": "Rials"},
                "style": "titleMedium",
                "color": "textSecondary",
                "textAlign": "center"
              }
            ]
          }
        }
      },
      
      {
        "id": "receipt_card",
        "type": "conditional",
        "condition": "{{success}}",
        "whenTrue": {
          "type": "card",
          "margin": {"top": 24},
          "child": {
            "type": "column",
            "children": [
              {
                "type": "info_row",
                "label": {"fa": "شماره پیگیری", "en": "Reference"},
                "value": "{{referenceNumber}}",
                "copyable": true
              },
              {"type": "divider"},
              {
                "type": "info_row",
                "label": {"fa": "نوع قبض", "en": "Bill Type"},
                "value": "{{billTypeName}}"
              },
              {"type": "divider"},
              {
                "type": "info_row",
                "label": {"fa": "تاریخ پرداخت", "en": "Payment Date"},
                "value": "{{date || 'امروز'}}"
              },
              {"type": "divider"},
              {
                "type": "info_row",
                "label": {"fa": "وضعیت", "en": "Status"},
                "value": {"fa": "پرداخت شده", "en": "Paid"},
                "valueColor": "#4CAF50"
              }
            ]
          }
        }
      },
      
      {
        "id": "share_section",
        "type": "conditional",
        "condition": "{{success}}",
        "whenTrue": {
          "type": "container",
          "margin": {"top": 24},
          "child": {
            "type": "row",
            "mainAxisAlignment": "spaceEvenly",
            "children": [
              {
                "type": "icon_button_column",
                "icon": "assets/icons/ic_share.svg",
                "label": {"fa": "اشتراک", "en": "Share"},
                "onTap": {
                  "type": "share",
                  "text": "پرداخت قبض {{billTypeName}}\nمبلغ: {{formatCurrency(amount)}} ریال\nشماره پیگیری: {{referenceNumber}}"
                }
              },
              {
                "type": "icon_button_column",
                "icon": "assets/icons/ic_download.svg",
                "label": {"fa": "رسید", "en": "Receipt"},
                "onTap": {"type": "download_receipt", "referenceNumber": "{{referenceNumber}}"}
              }
            ]
          }
        }
      },
      
      {
        "id": "action_buttons",
        "type": "container",
        "margin": {"top": 32},
        "child": {
          "type": "column",
          "children": [
            {
              "type": "elevated_button",
              "label": {"fa": "پرداخت قبض جدید", "en": "Pay Another Bill"},
              "fullWidth": true,
              "onTap": {"type": "navigate_replace", "route": "/bills"}
            },
            {"type": "sized_box", "height": 12},
            {
              "type": "outlined_button",
              "label": {"fa": "بازگشت به خانه", "en": "Back to Home"},
              "fullWidth": true,
              "onTap": {"type": "navigate_replace", "route": "/home"}
            }
          ]
        }
      }
    ]
  },
  
  "dataBindings": {
    "success": {"source": "route_param", "key": "success", "transform": "boolean"},
    "billType": {"source": "route_param", "key": "billType"},
    "amount": {"source": "route_param", "key": "amount", "transform": "number"},
    "referenceNumber": {"source": "route_param", "key": "referenceNumber"},
    "date": {"source": "route_param", "key": "date"},
    "billTypeName": {
      "source": "computed",
      "expression": "billType === 'electric' ? 'برق' : billType === 'gas' ? 'گاز' : billType === 'water' ? 'آب' : billType === 'phone' ? 'تلفن' : 'قبض'"
    }
  },
  
  "mockData": {
    "success": true,
    "billType": "electric",
    "amount": 3500000,
    "referenceNumber": "۱۲۳۴۵۶۷۸۹۰",
    "date": "۱۴۰۳/۰۹/۰۵"
  }
}

