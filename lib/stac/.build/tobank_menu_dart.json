{
  "appBar": {
    "title": {
      "data": "{{appStrings.menu.title}}",
      "style": {
        "type": "custom",
        "color": "{{appColors.current.text.title}}",
        "fontSize": 20.0,
        "fontWeight": "bold"
      },
      "textDirection": "rtl",
      "type": "text"
    },
    "centerTitle": true,
    "type": "appBar"
  },
  "body": {
    "request": {
      "url": "https://api.tobank.com/menu-items",
      "method": "get",
      "actionType": "networkRequest"
    },
    "targetPath": "data.menuItems",
    "template": {
      "padding": {
        "left": 8.0,
        "top": 8.0,
        "right": 8.0,
        "bottom": 8.0
      },
      "type": "listView"
    },
    "emptyTemplate": {
      "child": {
        "data": "{{appStrings.menu.noItemsFound}}",
        "style": {
          "type": "custom",
          "color": "{{appColors.current.text.subtitle}}"
        },
        "textDirection": "rtl",
        "type": "text"
      },
      "type": "center"
    },
    "loaderWidget": {
      "child": {
        "type": "circularProgressIndicator"
      },
      "type": "center"
    },
    "errorWidget": {
      "child": {
        "data": "{{appStrings.menu.errorLoading}}",
        "style": {
          "type": "custom",
          "color": "{{appColors.current.error.color}}"
        },
        "textDirection": "rtl",
        "type": "text"
      },
      "type": "center"
    },
    "type": "dynamicView"
  },
  "type": "scaffold"
}